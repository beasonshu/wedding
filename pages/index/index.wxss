/**index.wxss**/

.page-section {
  width: 100%;
  background-color: #fe3333, ;
}

.page-section_center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-item {
  width: 100%;
  display: block;
  height: 150px;
}

.main-content {

  display: flex;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  margin-left: 8px;
  margin-top: -8px;
  margin-right: 8px;
  z-index: 1000;
}

.avatar {
  height: 50px;
  width: 50px;
  border-radius: 25px;
}

.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 4px 1px 1px #ccc;
  margin: 8px;
  position: relative;
}
