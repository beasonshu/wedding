  display: flex;
  width: 710rpx;
  margin-left: 20rpx;
  align-items: center;
  z-index: 2;
  height: 120rpx;
  border-radius: 8rpx;
  background: white;
  justify-content: space-around
}
.quick-item{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}

.quick-item.text{
