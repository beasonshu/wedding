.simple-linear {
  width: 5rpx;
  height: 30rpx;
  align-items:flex-start;
  background: linear-gradient(rgb(216, 81, 99),red);
}



.avatar {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50rpx;
}

.card {
  border: 2rpx solid #fff;
  border-radius: 5rpx;
  background-color: #fff;
  box-shadow: 4rpx 1rpx 1rpx #ccc;
  margin: 8rpx;
  position: relative;
}
